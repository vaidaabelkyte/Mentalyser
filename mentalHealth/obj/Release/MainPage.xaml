        <Button x:ConnectionId='1' x:Name="sadButton" Content="" HorizontalAlignment="Left" Margin="10,74,0,0" Grid.Row="1" VerticalAlignment="Top" Width="99" Height="92"                         FontFamily="Global User Interface" ClickMode="Press">
            <Button.Background>
                <ImageBrush ImageSource="ms-appx:/Assets/images/yack.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='2' x:Name="mehButton" Content="" HorizontalAlignment="Left" Margin="119,69,0,0" Grid.Row="1" VerticalAlignment="Top" Width="104" Height="103"                         FontFamily="Global User Interface" ClickMode="Press">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="Assets/images/meh.png"/>
