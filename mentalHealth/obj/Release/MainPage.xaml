        <TextBlock HorizontalAlignment="Left" Margin="373,176,0,0" Grid.Row="1" TextWrapping="Wrap" Text="AWESOME" VerticalAlignment="Top" Height="30" Width="74" FontSize="14" FontStyle="Italic" Foreground="#FF5766F9"/>
