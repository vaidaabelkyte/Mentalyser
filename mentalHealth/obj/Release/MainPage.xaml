        </Button>
        <Button x:ConnectionId='3' x:Name="goodButton" Content="" HorizontalAlignment="Left" Margin="228,63,0,0" Grid.Row="1" VerticalAlignment="Top" Width="115" Height="109" FontFamily="Global User Interface"                          ClickMode="Press">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="Assets/images/good.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='4' x:Name="awesomeButton" Content="" HorizontalAlignment="Left" Margin="343,63,0,0" Grid.Row="1" VerticalAlignment="Top" Width="117" Height="108"                             ClickMode="Press">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="Assets/images/owesome.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='5' HorizontalAlignment="Left" Margin="42,173,0,0" Grid.Row="1" TextWrapping="Wrap" Text="YUCK!" VerticalAlignment="Top" Height="30" Width="52" FontSize="16" FontStyle="Italic" Foreground="#FF5766F9" RenderTransformOrigin="0.731,3.299"                                              />
        <TextBlock HorizontalAlignment="Left" Margin="143,173,0,0" Grid.Row="1" TextWrapping="Wrap" Text="MEH" VerticalAlignment="Top" Height="30" Width="52" FontSize="16" FontStyle="Italic" Foreground="#FF5766F9" RenderTransformOrigin="0.048,0.444"/>
