            <Button.RenderTransform>
                <CompositeTransform SkewX="1.646" TranslateX="1.769"/>
            </Button.RenderTransform>
            <Button.Foreground>
                <ImageBrush ImageSource="Assets/images/logo (37).png" Stretch="UniformToFill"/>
            </Button.Foreground>
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Assets/images/logo (41).png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='7' Content="" HorizontalAlignment="Left" Margin="32,401,0,0" Grid.Row="1" VerticalAlignment="Top" Width="372" Height="155" FontFamily="Global User Interface"                          ClickMode="Press">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="Assets/images/logo (63).png"/>
